<% layout('layouts/boilerplate') -%>

    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <img src="<%= campground.image %>" class="card-img-top" alt="camp image">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.title %>
                    </h5>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= campground.location %>
                    </li>
                    <li class="list-group-item">Price: <%= campground.price %>$</li>
                    <div class="card-body">
                        <a class="btn btn-info" href="/campgrounds/<%= campground._id %>/edit">Edit Campground</a>
                        <form class="d-inline" method="POST" action="/campgrounds/<%= campground._id %>?_method=DELETE">
                            <button class="btn btn-danger" type="submit">DELETE</button>
                        </form>
                    </div>
                    <footer class="card-footer">
                        <a class="text-muted" href="/campgrounds">All CampGrounds</a>
                    </footer>
                </ul>

            </div>

        </div>
        <div class="col-6">
            <h2>Leave a Review</h2>
            <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" class="mb-3 needs-validation"
                novalidate>
                <div class="mb-3">
                    <label class="form-label" for="rating">Ratings</label>
                    <input type="range" class="form-range" min="1" max="5" name="review[rating]" id="rating">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Review</label>
                    <textarea name="review[body]" id="body" cols="30" rows="3" class="form-control" required></textarea>
                    <div class="valid-feedback">
                        Looks Good!!
                    </div>
                    <div class="invalid-feedback">
                        OOPS!! need a text
                    </div>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>

            <h3>Reviews:-</h3>

            <% for(let review of campground.reviews) {%>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Rating: <%= review.rating %>
                        </h5>
                        <p class="card-text">Review: <%=review.body%>
                        </p>
                        <form action="/campgrounds/<%= campground._id %>/reviews/<%=review._id%>?_method=DELETE"
                            method="POST">
                            <button class="btn btn-sm btn-danger">DELETE</button>
                        </form>
                    </div>
                </div>
                <% } %>
        </div>
    </div>